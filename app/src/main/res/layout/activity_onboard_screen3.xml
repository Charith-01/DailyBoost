<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".OnboardScreen3">

    <!-- where the white panel starts -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/topGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <!-- White panel -->
    <FrameLayout
        android:id="@+id/bottomSheet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_bottom_sheet_white"
        app:layout_constraintTop_toBottomOf="@id/topGuide"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Content -->
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <!-- Title -->
            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:paddingTop="65dp"
                android:paddingBottom="8dp"
                android:text="@string/onboard3_title"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/textSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:paddingBottom="20dp"
                android:text="@string/onboard3_description"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <!-- Dots (third active for screen 3) -->
            <LinearLayout
                android:id="@+id/dotsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Inactive -->
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/dot_inactive" />

                <!-- Inactive -->
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/dot_inactive" />

                <!-- Active (wider pill) -->
                <View
                    android:layout_width="24dp"
                    android:layout_height="8dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/dot_active" />
            </LinearLayout>
        </LinearLayout>

        <!-- Button row at bottom -->
        <LinearLayout
            android:id="@+id/buttonRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="16dp"
            android:layout_marginBottom="40dp">

            <ImageView
                android:id="@+id/btnSkip"
                android:layout_width="130dp"
                android:layout_height="43dp"
                android:layout_marginEnd="12dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/prebtn" />

            <ImageView
                android:id="@+id/btnNext"
                android:layout_width="130dp"
                android:layout_height="43dp"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/getstartbtn" />
        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
