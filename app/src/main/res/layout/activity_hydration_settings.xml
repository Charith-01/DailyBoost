<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/bg_gradient_toolbar"
            app:title="Hydration Settings"
            app:titleCentered="true"
            app:titleTextColor="@android:color/white"
            app:titleTextAppearance="@style/ToolbarTitleText"
            app:elevation="0dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="bottom"
            android:src="@drawable/wave_divider"
            android:scaleType="fitXY"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- === Goal and Drink Settings === -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/secondary"
                app:strokeColor="@color/accent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hydration Targets"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:drawableStart="@drawable/ic_water_drop"
                        android:drawablePadding="8dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Daily Goal (mL)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxStrokeColor="@color/primary"
                        app:boxBackgroundColor="@color/accent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputGoal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:paddingStart="16dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:paddingEnd="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:hint="Each Drink (mL)"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxStrokeColor="@color/primary"
                        app:boxBackgroundColor="@color/accent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputDrinkAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:paddingStart="16dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"
                            android:paddingEnd="16dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- === Reminder Interval === -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/secondary"
                app:strokeColor="@color/accent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header row with right-side clock image -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvReminderHeader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reminder Interval"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:drawableStart="@drawable/ic_timer"
                            android:drawablePadding="8dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>

                        <!-- >>> Your clock.png here <<< -->
                        <ImageView
                            android:id="@+id/imgClockDecor"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/clock"
                            android:contentDescription="@string/app_name"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:alpha="0.9"/>
                    </RelativeLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutMinutes"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:hint="Minutes"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxStrokeColor="@color/primary"
                        app:boxBackgroundColor="@color/accent"
                        app:startIconDrawable="@drawable/ic_timer"
                        app:startIconTint="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputMinutes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="4"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:paddingTop="14dp"
                            android:paddingBottom="14dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/sliderMinutes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:valueFrom="15"
                        android:valueTo="240"
                        android:value="120"
                        android:stepSize="5"
                        app:trackHeight="6dp"
                        app:thumbRadius="14dp"
                        app:thumbColor="@color/primary"
                        app:trackColorInactive="@color/accent"
                        app:trackColorActive="@color/primary"
                        app:haloColor="@color/primary_20"
                        app:labelBehavior="withinBounds"
                        app:labelStyle="@style/SliderLabel"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- === Summary Card === -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/secondary"
                app:strokeColor="@color/accent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Summary"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:drawableStart="@drawable/ic_summary"
                        android:drawablePadding="8dp"/>

                    <TextView
                        android:id="@+id/txtSummaryGoal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Goal: 2500 mL"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="12dp"/>

                    <TextView
                        android:id="@+id/txtSummaryDrink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Each Drink: 300 mL"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:id="@+id/pillEvery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Every 2 hours"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/primary_dark"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_semibold"/>

                    <TextView
                        android:id="@+id/summaryNextAt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next at 12:22 PM"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- === Actions === -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    app:cornerRadius="20dp"
                    android:text="Cancel"
                    android:textColor="@color/primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="2dp"
                    app:rippleColor="@color/primary_20"
                    android:fontFamily="@font/poppins_semibold"
                    android:drawableStart="@drawable/ic_close"
                    android:drawablePadding="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:text="Save"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@color/primary"
                    android:textColor="@color/secondary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semibold"
                    app:rippleColor="@color/primary_dark"
                    android:drawableStart="@drawable/ic_check"
                    android:drawablePadding="8dp"
                    app:elevation="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
