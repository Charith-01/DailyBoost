<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/primary"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Emoji icon -->
        <TextView
            android:id="@+id/habitIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="ðŸ’§"
            android:textSize="18sp"/>

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/habitIcon"
            android:layout_toStartOf="@+id/actionContainer"
            android:layout_marginStart="12dp"
            android:text="Drink Water"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- Progress label -->
        <TextView
            android:id="@+id/txtProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitle"
            android:layout_alignStart="@id/txtTitle"
            android:layout_marginTop="4dp"
            android:text="0/1 today"
            android:textColor="@color/gray"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_medium"/>

        <!-- Slim progress bar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:layout_below="@id/txtProgress"
            android:layout_toStartOf="@+id/actionContainer"
            android:layout_marginTop="8dp"
            android:max="100"
            android:progress="0"
            app:trackThickness="6dp"
            app:trackCornerRadius="3dp"
            app:indicatorColor="@color/primary"
            app:trackColor="@color/accent"/>

        <!-- Right-side actions -->
        <FrameLayout
            android:id="@+id/actionContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <!-- COUNT: perfectly centered + inside an outlined circle -->
            <FrameLayout
                android:id="@+id/btnIncrement"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_circle_outline"
                android:foreground="?attr/selectableItemBackground"
                android:visibility="gone">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_plus_bold"
                    app:tint="@color/primary"/>
            </FrameLayout>

            <!-- YES/NO: modern circular checkbox -->
            <CheckBox
                android:id="@+id/chkDone"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:gravity="center"
                android:padding="12dp"
                android:focusable="false"
                android:clickable="true"
                android:visibility="gone"/>
        </FrameLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
