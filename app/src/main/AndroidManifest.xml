<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Hydration: notifications (Tiramisu/33+) and reboot handling -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DailyBoost"
        tools:targetApi="31">

        <activity
            android:name=".SignUpScreen"
            android:exported="false" />
        <activity
            android:name=".SignInScreen"
            android:exported="false" />
        <activity
            android:name=".HomeScreen"
            android:exported="false" />

        <!-- âœ… Habits screens -->
        <activity
            android:name=".HabitsActivity"
            android:exported="false" />
        <activity
            android:name=".AddEditHabitActivity"
            android:exported="false" />
        <!-- âœ… End Habits -->

        <activity
            android:name=".OnboardScreen3"
            android:exported="false" />
        <activity
            android:name=".OnboardScreen2"
            android:exported="false" />
        <activity
            android:name=".OnboardScreen1"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ”” Hydration: re-assert scheduling after reboot -->
        <receiver
            android:name=".BootReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".HydrationSettingsActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
